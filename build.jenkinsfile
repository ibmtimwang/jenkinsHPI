def scmUrlOCP = "https://github.com/ibmtimwang/jenkinsHPI.git"

node('master') {
    try {
        dir('project'){
            stage("Checkout project") {
                //sh "git config --global http.sslVerify false"
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/master"]],
                    doGenerateSubmoduleConfigurations: false,
                    extenstions: [],
